<h1 class = "d-flex justify-content-center">All Recent Postings</h1>
<center><%= button_to 'Post an Equipment', new_equipment_path, method: :get, class: "btn-primary"%></center>
<div class = "cardcontainer">
<% @equipments.each do |e|%>
  <div class = "card my-3">
  <% if e.photo.key %>
    <%= cl_image_tag e.photo.key, height: 300, width: 325 %>
  <% end %>
  <h4><%= e.title %></h4>
  <p>Daily Price: â‚¬<%= e.daily_price %></p>
  <p> <%= e.description%></p>
  <p>State: <%= e.state %></p>
  <%= button_to 'Show more', equipment_path(e), method: :get, class: "btn-primary"%>
  <br>
  <br>
  </div>
<% end %>
</div>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
