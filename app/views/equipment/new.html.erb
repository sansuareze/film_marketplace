<div class="container mt-5">
  <%= simple_form_for(@equipment) do |f| %>
  <%= f.input :image, as: :file %>

  <%= f.input :title %>

  <%= f.input :daily_price %>

  <%= f.input :category, collection: [["Camera", "camera"], ["Lighting", "lighting"], ["Sound", "sound"]] %>

  <%= f.input :state, collection: [["Pending", "pending"], ["Approved", "approved"], ["Completed", "completed"], ["Rejected", "rejected"]] %>

  <%= f.button :submit %>
<% end %>

</div>
